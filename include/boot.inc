;------------- LOADER 和 kernel -------------
LOADER_BASE_ADDR equ 0x900
LOADER_START_SECTOR equ 0x2
KERNEL_START_SECTOR equ 0x9
KERNEL_BIN_BASE_ADDR equ 0x70000
KERNEL_ENTRY_POINT equ 0xc0001500
;-------------------页表---------------------
PAGE_DIR_TABLE_POS equ 0x100000
;------------- GDT 描述符属性 ----------------
DESC_G_4K equ 1_00000000000000000000000b ; 设置段界限粒度为4k字节
DESC_D_32 equ  1_0000000000000000000000b ; 设置 段内偏移地址及操作数大小为32位
DESC_L    equ   0_000000000000000000000b ; 设置在32位代码段
DESC_AVL  equ    0_00000000000000000000b ; CPU不用此位
DESC_LIMIT_CODE2 equ 1111_0000000000000000b ; 设置第二段段界限
DESC_LIMIT_DATA2 equ DESC_LIMIT_CODE2
DESC_LIMIT_VIDEO2 equ 0000_0000000000000000b
DESC_P equ 1_000000000000000b; 段是否存于内存
; 特权级
DESC_DPL_0 equ 00_0000000000000b
DESC_DPL_1 equ 01_0000000000000b
DESC_DPL_2 equ 10_0000000000000b
DESC_DPL_3 equ 11_0000000000000b
; 设置系统/代码段
DESC_S_CODE equ 1_000000000000b
DESC_S_DATA equ DESC_S_CODE
DESC_S_SYS equ 0_000000000000b
DESC_TYPE_CODE equ 1000_00000000b; x=1 r c a=0 可执行 不可读 非一致 已访问a 默认清0
DESC_TYPE_DATA equ 0010_00000000b; x e w=1 a 不可执行 向上扩展 可写 已访问a 默认清0

DESC_CODE_HIGH4 equ (0x00 << 24) + DESC_G_4K + DESC_D_32 + \
DESC_L + DESC_AVL + DESC_LIMIT_CODE2 + \
DESC_P+DESC_DPL_0 + DESC_S_CODE +\
DESC_TYPE_CODE + 0x00

DESC_DATA_HIGH4 equ (0x00 << 24) + DESC_G_4K + DESC_D_32 +\
DESC_L + DESC_AVL + DESC_LIMIT_DATA2 + \
DESC_P + DESC_DPL_0 + DESC_S_DATA + \
DESC_TYPE_DATA + 0x00

DESC_VIDEO_HIGH4 equ (0x00 << 24) + DESC_G_4K + DESC_D_32 +\
DESC_L + DESC_AVL + DESC_LIMIT_VIDEO2 + DESC_P + \
DESC_DPL_0 + DESC_S_DATA + DESC_TYPE_DATA + 0x0b
;-----------------选择子属性---------------
RPL0 equ 00b
RPL1 equ 01b
RPL2 equ 10b
RPL3 equ 11b
TI_GDT equ 000b ; 选择索引描述符
TI_LDT equ 100b
;----------------页表属性-----------
PG_P equ 1b
PG_RW_R equ 00b
PG_RW_W equ 10b
PG_US_S equ 000b
PG_US_U equ 100b
;--------------Program type ---------
PT_NULL equ 0 ; 忽略
